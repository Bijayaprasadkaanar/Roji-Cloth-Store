<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#000"

        android:padding="2dp">


        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000"
            android:padding="10dp"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_booking"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#343D52"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_event_note_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"

                        android:text="Owner" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_cart"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#343D52"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="46dp"

                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_collections_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="Gallery" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_history"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#343D52"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_shopping_cart_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:text="Shop" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_notification"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_weight="1"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#343D52"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_details_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="Payment" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="#000"
            android:orientation="vertical">



            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView">
            </ListView>


        </LinearLayout>

    </LinearLayout>